                <div class="input-field col s12">
                    <input id="postTitle" type="text" name="create_post_title">
                    <label for="name">Title:</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <textarea id="postDesc" class="materialize-textarea" name="create_post_desc"></textarea>
                    <label for="textarea1">Summary:</label>
                </div>
            </div>
            <div class="row center">
            </div>

        </form>

    </div>
    <button type="submit" class="button-style btn center save"><i class="far fa-save"></i></button>
</div>
